<div class="app-container">
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-body text-center">
          <h2 class="card-title">{{title}}</h2>
          <p class="card-text text-muted">{{subtitle}}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <div class="row mb-4">
    <div class="col-12">
      <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
        <div class="container-fluid">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link {{#if showDataTable}}active{{/if}}" href="#" data-page="data-table">
                üìä Data Table Demo
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" data-page="components">
                üß© Components
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" data-page="about">
                ‚ÑπÔ∏è About
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>

  <!-- Main content area -->
  <div class="row">
    <div class="col-12">
      {{#if showDataTable}}
        <!-- Search and controls -->
        <div class="row mb-3">
          <div class="col-md-6">
            <div data-component="search-box"></div>
          </div>
          <div class="col-md-6">
            <div class="text-end">
              <button class="btn btn-outline-primary btn-sm">
                üîÑ Refresh Data
              </button>
            </div>
          </div>
        </div>

        <!-- Data table -->
        <div data-component="data-table"></div>

        <!-- Pagination -->
        <div class="mt-3">
          <div data-component="pagination"></div>
        </div>
      {{else}}
        <div class="text-center py-5">
          <h4>Welcome to Whirlpool Framework</h4>
          <p class="text-muted">Select a demo from the navigation above</p>
        </div>
      {{/if}}
